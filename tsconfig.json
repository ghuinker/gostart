{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["assets/js/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["assets/**/*.ts", "assets/**/*.vue"],
  "exclude": ["node_modules"]
}
